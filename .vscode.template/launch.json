// replace all instances of `ModTemplate` with the name of your mod
{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "factoriomod",
      "request": "launch",
      "name": "Debug",
      "factorioPath": "${env:factorioTestbench1}",
      "hookMode": "debug",
      "hookControl": ["ModTemplate", "Sandbox"],
      "factorioArgs": ["--load-scenario", "EditorExtensions/testing"]
    },
    {
      "type": "factoriomod",
      "request": "launch",
      "name": "Debug (data)",
      "factorioPath": "${env:factorioTestbench1}",
      "hookMode": "debug",
      "hookControl": ["ModTemplate", "Sandbox"],
      "hookData": true,
      "hookSettings": true,
      "factorioArgs": ["--load-scenario", "EditorExtensions/testing"]
    },
    {
      "type": "factoriomod",
      "request": "launch",
      "name": "Debug (trim mods)",
      "factorioPath": "${env:factorioTestbench1}",
      "hookMode": "debug",
      "hookControl": ["ModTemplate", "Sandbox"],
      "factorioArgs": ["--load-scenario", "EditorExtensions/testing"],
      "adjustMods": {
        "EditorExtensions": true,
        "flib": true,
        "ModTemplate": true,
        "Sandbox": true
      },
      "disableExtraMods": true
    },
    {
      // this configuration is only useful if you have factorio source access - otherwise just delete it
      "type": "factoriomod",
      "request": "launch",
      "name": "Debug (src)",
      "factorioPath": "${env:factorioSourceDebug}",
      "hookMode": "debug",
      "hookControl": ["ModTemplate", "Sandbox"],
      "hookData": true,
      "hookSettings": true
    },
    {
      "type": "factoriomod",
      "request": "launch",
      "name": "Profile",
      "factorioPath": "${env:factorioTestbench1}",
      "hookMode": "profile",
      "hookControl": ["ModTemplate", "Sandbox"]
    }
  ]
}
